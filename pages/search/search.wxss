/* pages/search/search.wxss */
page{
  background-color: #dedede;
  padding: 20rpx;
}

.search_row{
  height: 60rpx;
  display: flex;
}

.search{
  flex:1;
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.btn{
  width: 110rpx!important;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content{
  margin-top: 30rpx;
}

.search_item{
  padding: 20rpx 10rpx;
  margin: 10rpx 0;
  background-color: #fff;
  font-size: 26rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}