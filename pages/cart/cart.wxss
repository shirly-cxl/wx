/* pages/cart/cart.wxss */
.address{
  padding: 20rpx;
}

.btn{
  width: 60%;
}

.row{
  display: flex;
  padding: 20rpx;
}

.user{
  flex:5;
}

.phone{
  flex:3;
  text-align: right;
}

.title{
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}

.item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.checked{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.src{
  width: 80%;
}

.info{
  flex:4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}

.wrap{
  display: flex;
  justify-content: space-between;
}

.price{
  color: var(--themColor);
  font-size: 34rpx;
  font-weight: bold;
}

.tool{
  display: flex;
}

.num_edit{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}

.num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}

.all_chk{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.total{
  flex:5;
  text-align: right;
  padding-right: 15rpx;
}

.pay{
  flex:3;
  background-color: var(--themColor);
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

page{
  padding-bottom: 90rpx;
}

.dh{
  animation: dhs linear 1s infinite alternate ;
}

@keyframes dhs{
  0%,50%,100%{opacity: 1;}
  25%{opacity: 0;}
}