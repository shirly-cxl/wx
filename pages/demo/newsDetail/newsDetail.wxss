/* pages/demo/newsDetail/newsDetail.wxss */
.img {
  width: 100%;
  height: 400rpx;
  background-size: 100%;
  background-position: center;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.share{
  background-color: rgba(255, 255, 255, 0.6);
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx;
  position: relative;
}

.share image{
  width: 40rpx;
  height: 40rpx;
}

.btn{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  opacity: 0;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.autor {
  width: 80rpx;
  height: 80rpx;
  padding-left: 20rpx;
}

.name {
  font-size: 36rpx;
  color: #2b2b2b;
  padding: 0 20rpx;
}

.time {
  font-size: 28rpx;
  color: #8b8b8b;
}

.title {
  font-size: 28rpx;
  color: #2b2b2b;
  padding: 0 30rpx 30rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.content {
  padding: 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}