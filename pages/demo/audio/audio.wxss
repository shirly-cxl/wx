/* pages/demo/audio/audio.wxss */
.aduio-wrap{
  background-color: rgb(100, 98, 98);
  width: 100%;
  height: 16vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  color: #fff;
  box-shadow: 0 0 10px inset rgb(243, 240, 240);
}

.aduio-wrap>view:nth-child(2){
  margin-top: 30rpx;
}

.qudong{
  width: 100%;
  height: 64vh;
  background-color: rgb(117, 115, 115);
  display: flex;
  justify-content: center;
  align-items: center;
}

.big{
  width: 250px;
  height: 250px;
  border-radius: 50%;
  border: 5px solid #495396;
  background-color: rgb(5, 76, 182);
  box-sizing: border-box;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.small{
  width: 200px;
  height: 200px;
  border-radius: 50%;
  text-align: center;
  animation-name: donghua;
  /* 时长 */
  animation-duration: 25s;
  /* 匀速 */
  animation-timing-function: ease;
  /* 次数 infinite--循环*/
  animation-iteration-count: infinite;
}

@keyframes donghua{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

.controller{
  width: 100%;
  height: 20vh;
  background-color: rgb(100, 98, 98);
  box-shadow: 0 0 5px inset rgb(231, 231, 211);
}

.prg{
  display: flex;
  flex-direction: row;
  color: #fff;
  padding: 15px 0 20px;
}

.prg text{
  width: 12%;
  text-align: center;
  color: #fff;
  font-size: 12px;
}

.prg progress{
  width: 75%;
}

.controller1{
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  color: #fff;
}

.controller1 view{
  width: 20%;
  height: 24px;
  text-align: center;
  font-size: 35rpx;
}