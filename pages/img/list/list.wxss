/* pages/img/list/list.wxss */
.first{
 padding: 0rpx 16rpx;
 margin: 10rpx 0;
 width: 100%;
}
.item{
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.img{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.images{
  width: 70%;
}

.info{
  flex:3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.price{
  color: var(--themColor);
  font-size: 32rpx;
}